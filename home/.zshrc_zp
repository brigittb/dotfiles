#
# Executes commands at the start of an interactive session.
#

# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# setup default uncrustify config
export UNCRUSTIFY_CONFIG="${HOME}/.vim/uc.cfg"

# enable auto complete in python interactive shell by default
export PYTHONSTARTUP="${HOME}/.pyrc"

# enable iTerm2 shell integration
#source "${HOME}/.custom/iterm2_shell_integration.zsh"

# enable homeshick
#source "${HOME}/.custom/homeshick.zsh"

# enable powerline
#source "${HOME}/.custom/powerline.zsh"

# enable custom aliases
source "${HOME}/.custom/aliases.zsh"

# enable zaw
source "${HOME}/.custom/zaw/zaw.zsh"

# enable fzf
source "${HOME}/.custom/fzf/fzf.zsh"

# homebrew api github token
source "${HOME}/.private/homebrew-apitoken.zsh"

# automatically remove duplicates
typeset -U path cdpath fpath manpath
